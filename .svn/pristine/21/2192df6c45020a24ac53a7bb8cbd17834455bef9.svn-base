extends layoutindex
block content
	-if(error)
		.alert.alert-error
			| #{error}
	-else
		div.container
			form.form-horizontal(action='/user/update',ccept-charset='utf-8', method='post')
				.form-group
					label.control-label.col-xs-2(for='form_account') 账号
					div.col-xs-10
						input#form_account.form-control(type='text', name='account',value='#{userinfo.account}')
				.form-group
					label.control-label.col-xs-2(for='form_nickname') 昵称
					div.col-xs-10
						input#form_nickname.form-control(type='text', name='nickname',value='#{userinfo.nickname}')
				.form-group
					label.control-label.col-xs-2(for='form_realname') 真实姓名
					div.col-xs-10
						input#form_realname.form-control(type='text', name='realname',value='#{userinfo.realname}')
				.form-group
					label.control-label.col-xs-2(for='form_phone') 手机
					div.col-xs-10
						input#form_phone.form-control(type='text', name='phone',value='#{userinfo.phone}')
				.form-group
					label.control-label.col-xs-2(for='form_email') 邮箱
					div.col-xs-10
						input#form_email.form-control(type='email', name='email', autocomplete='on',value='#{userinfo.email}')
				.form-group
					label.control-label.col-xs-2(for='form_descri') 简要介绍
					div.col-xs-10
						input#form_repassword.form-control(type='text', name='description',value='#{userinfo.email}')
				.form-group
					label.control-label.col-xs-2(for='form_select_schoolyear') 入学年级
					div.col-xs-10
						select#form_select_schoolyear.form-control(name='school_year')
							option(value='#{userinfo.school_year}',selected)
								| #{userinfo.school_year}
				.form-group
					label.control-label.col-xs-2(for='form_select_schoolarea') 学校所在地区
					div.col-xs-10
						select#form_select_schoolarea.form-control(onchange='getSchools(this)',name='school_area')
							option(value='#{userinfo.school_area}',selected)
								| #{userinfo.school_area}
				.form-group
					label.control-label.col-xs-2(for='form_select_school') 选择学校
					div.col-xs-10
						select#form_select_school.form-control(onchange='getMajors(this)',name='school')
							option(value='#{userinfo.school}',selected)
								| #{userinfo.school}
				.form-group
					label.control-label.col-xs-2(for='form_select_major') 选择学院
					div.col-xs-10
						select#form_select_major.form-control(name='major')
							option(value='#{userinfo.major}',selected)
								| #{userinfo.major}
				.form-group
					button.col-xs-12.btn.btn-primary(type='submit') 更新