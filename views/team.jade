extends shared/layout

block content
	div#container.container.pageindex
		.row
			.panel.panel-primary
				.panel-heading
					p 团队管理
				.panel-body
					#search.row.search_row
						div.col-md-3.col-xs-5
							div.input-group
								div.input-group-addon 团队描述
								input.form-control(type='text' placeholder="请输入团队描述" id='teamdesc' data-field="description" data-area="search" data-operator='5')
						div.col-md-3.col-xs-5
							div.input-group
								div.input-group-addon 团队名称
								input.form-control(type='text' placeholder="请输入团队名称" data-field="teamname" data-area="search" data-operator='5')
						div.col-md-2.col-xs-3.pull-right
							div.input-group
								span.input-group-btn
									button#btnaddteam.btn.btn-info.marginr5(type="button") 新增团队
									button.btn.btn-primary.marginr5(type="button" id="btnSearch" ) 查询
					table#dgForTeam(style="width:auto")
						thead(frozen='true')
							tr
								th(data-options="field:'_operate'" align="center" formatter="util.initOperate" width="80") 操作
						thead
							tr
								th(data-options="field:'_id'" width="1" hidden=true) _id
								th(data-options="field:'teamname',editor:{type:'text'}" width="80") 团队名称
								th(data-options="field:'description',editor:{type:'text'}" width="120" ) 团队描述
								th(data-options="field:'isdel',editor: { type: 'combobox', options: { data: commonData.getYesOrNoData(), valueField: 'value', textField: 'text' }}" width="60" formatter='Common.YesOrNoFormat') 是否禁用
						tbody
	script(type='text/javascript').                                                  
		var local_data =!{JSON.stringify(data)};   
	script
		include ../public/javascripts/viewscripts/team.js
	include shared/footer.jade
